// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Game{
  id String @id @default(uuid())
  name String
  bar_code String @unique
  price Decimal
  created_at DateTime @default(now())
  @@map("games")
}

model Category{
  id String @id @default(uuid())
  name String

  @@map("categories")
}